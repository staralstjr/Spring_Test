<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.staralstjr.spring.lesson04.dao.SellerDAO">
 	<insert id="insertSeller" parameterType="map">
 		INSERT INTO
 			`seller`
 		(
 			`nickname`
 			, `profileImageUrl`
 			, `temperature`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{nickname}
 			, #{profileImageUrl}
 			, #{temperature}
 			, now()
 			, now()
 		)
 	
 	</insert>
 	<select id="selectLastSeller" resultType="com.staralstjr.spring.lesson04.model.Seller">
 		SELECT
 			`id`
 			, `nickname`
 			, `profileImageUrl`
 			, `temperature`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`seller`
 		ORDER BY `id` DESC
 		LIMIT 1
 		
 	</select>
 
 </mapper>